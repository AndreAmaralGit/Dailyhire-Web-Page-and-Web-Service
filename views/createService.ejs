<!DOCTYPE html>

<head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <title>DailyHire</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <!--=======================================  ICON  ==================================================-->
      <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
      <!--=======================================  NAV BAR  ===============================================-->
      <!-- Bootstrap CSS-->
      <link rel="stylesheet" href="vendor/bootstrap/css/bootstrap.min.css">
      <!-- theme stylesheet-->
      <link rel="stylesheet" href="stylesheets/navBar.css" id="theme-stylesheet">
      <link rel="stylesheet" href="stylesheets/createService.css">
      <!--=======================================  DATE PICKER  ===========================================-->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet"
            type="text/css" />

</head>

<body>

      <%- include('partials/navBar') %>

      <div class="content-inner">
            <!-- Page Header-->
            <header class="page-header">
                  <div class="container-fluid">
                        <h2 class="no-margin-bottom">Announce Service</h2>
                  </div>
            </header>


            <!-- Forms Section-->
            <section class="forms">
                  <div class="container-fluid">
                        <div class="row">
                              <!-- Basic Form-->
                              <div class="col-lg-8">
                                    <div class="card">

                                          <div class="card-body">


                                                <form class="validation">

                                                      <div class="form-group">
                                                            <label class="form-control-label">Work Area</label>
                                                            <select id="inputState" class="form-control shadow-none">
                                                                  <option disabled selected>Choose...</option>
                                                                  <option>Alfaiate</option>
                                                                  <option>Canalizador</option>
                                                                  <option>Carpinteiro</option>
                                                                  <option>Eletricista</option>
                                                                  <option>Estofador</option>
                                                                  <option>Estucador</option>
                                                                  <option>Jardineiro</option>
                                                                  <option>Ladrilhador</option>
                                                                  <option>Lenhador</option>
                                                                  <option>Marceneiro</option>
                                                                  <option>Marmorista</option>
                                                                  <option>Mec√¢nico</option>
                                                                  <option>Pintor</option>
                                                                  <option>Sapateiro</option>
                                                                  <option>Serralheiro</option>
                                                                  <option>Vidraceiro</option>
                                                            </select>
                                                            <div id="errorSelect" class="invalid-feedback">Please make a
                                                                  selection.</div>
                                                      </div>

                                                      <div class="form-group row">
                                                            <div class="col-md-6">
                                                                  <label class="form-control-label">Start Date</label>
                                                                  <div id="datepicker" class="input-group date"
                                                                        data-date-format="dd-mm-yyyy">
                                                                        <input class="form-control shadow-none"
                                                                              type="text" readonly id="startDate" />
                                                                        <span class="input-group-addon"><i
                                                                                    class="glyphicon glyphicon-calendar"></i></span>
                                                                        <div class="invalid-feedback">Please provide
                                                                              a start date.
                                                                        </div>
                                                                  </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                  <label class="form-control-label">End Date</label>
                                                                  <div id="datepicker1" class="input-group date"
                                                                        data-date-format="dd-mm-yyyy">
                                                                        <input class="form-control shadow-none"
                                                                              type="text" readonly id="endDate"
                                                                              disabled />
                                                                        <span class="input-group-addon"><i
                                                                                    class="glyphicon glyphicon-calendar"></i></span>
                                                                        <div class="invalid-feedback">Please provide
                                                                              an end date.
                                                                        </div>
                                                                  </div>
                                                            </div>

                                                      </div>

                                                      <div class="form-group">
                                                            <label class="form-control-label">Address</label>
                                                            <input type="text" id="address-input"
                                                                  placeholder="Where will be the service?" />
                                                            <div id="errorAddress" class="invalid-feedback">Please
                                                                  provide the address for the service.</div>
                                                      </div>

                                                      <div class="form-group">
                                                            <label class="form-control-label">Description</label>
                                                            <textarea class="form-control shadow-none" rows="3"
                                                                  placeholder="Important information that workers must be informed"
                                                                  id="description"></textarea>
                                                      </div>



                                                      <div class="form-group">
                                                            <input type="button" value="Create Service"
                                                                  class="btn btn-primary" id="submitService"
                                                                  onclick="createService()">
                                                      </div>
                                                </form>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
            </section>



      </div>
      </div> <!-- Cloose div= class"d-flex" -->

      <!-- Sweet Alert -->
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
      <!-- Address Auto-complete -->
      <script src="https://cdn.jsdelivr.net/npm/places.js@1.19.0"></script>
      <!-- JavaScript files -->
      <script src="https://kit.fontawesome.com/a076d05399.js"></script>
      <script src="vendor/popper.js/umd/popper.min.js"> </script>
      <script src="vendor/jquery/jquery.min.js"></script>
      <!--<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>-->
      <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
      <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->
      <!-- Date Picker -->
      <script
            src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
      <!-- Main File-->
      <script src="javascripts/navBar.js"></script>
      <script src="javascripts/createService.js"></script>


</body>

</html>